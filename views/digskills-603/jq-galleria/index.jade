doctype html
html
	meta(charset="UTF-8")
	title JQuery Plugin Assigemnt &ndash; Galleria
	meta(name="description", content="A description of the webpage")
	link(rel="stylesheet", href="stylesheets/normalize.css")
	link(rel="stylesheet", href="http://cdnjs.cloudflare.com/ajax/libs/galleria/1.3.5/themes/classic/galleria.classic.min.css")
	link(rel="stylesheet", href="stylesheets/style.css")
body
	.container
		header.page-header(role="banner")
			h1.site-title
				a(href="#") Your name
			h2.tagline Just a Galleria demo page
		#content(role="main")
			#galleria
				each image in imagesToGo
					a(href="images/"+image[0]+".jpg")
						img(src="images/thumbs/"+image[0]+"-thumb.jpg", data-title=image[0], alt=image[1])
				
				each videoToShow in videos1
					a(href=videoToShow[0])
						img(src='images/thumbs/'+videoToShow[1], data-title=videoToShow[2], alt=videoToShow[3])

		footer.page-footer(role="contentinfo")
			p &copy; 2014 Ariel Borochov
	script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js")
	script.
		window.jQuery || document.write('<script src="javascripts/jquery-1.11.0.min.js"')
	script(src="http://cdnjs.cloudflare.com/ajax/libs/galleria/1.3.5/galleria.min.js")
	script(src="javascripts/plugins.js")